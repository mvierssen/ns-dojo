{
  "name": "@ns-dojo-scripts/lib",
  "version": "0.1.0",
  "description": "Core library for NS Dojo TypeScript scripts (Node.js)",
  "type": "module",
  "private": true,
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js"
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "tsx watch src/index.ts",
    "check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@ns-dojo/eslint-config-cli": "0.1.0",
    "@ns-dojo/ts-config-cli": "0.1.0",
    "@ns-dojo/vitest-config-node": "0.1.0",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.10",
    "eslint": "^9.39.1",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  }
}
