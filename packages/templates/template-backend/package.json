{
  "name": "@ns-dojo/template-backend",
  "version": "0.1.0",
  "dependencies": {},
  "devDependencies": {
    "@ns-dojo/eslint-config-node": "0.1.0",
    "@ns-dojo/ts-config-node": "0.1.0",
    "@ns-dojo/vitest-config-node": "0.1.0",
    "nodemon": "3.1.11",
    "pm2": "6.0.13",
    "typescript": "5.9.3"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/src/index.d.ts",
      "node": "./dist/src/index.js",
      "import": {
        "source": "./src/index.ts",
        "default": "./src/index.ts"
      }
    },
    "./*": {
      "types": "./dist/src/*.d.ts",
      "node": "./dist/src/*.js",
      "import": {
        "source": "./src/*.ts",
        "default": "./src/*.ts"
      }
    }
  },
  "files": [
    "package.json",
    "dist"
  ],
  "main": "dist/src/index.js",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "coverage": "npm run coverage:vitest",
    "coverage:vitest": "vitest run --coverage",
    "debug": "tsc --build && node --inspect=0.0.0.0 dist/src/index.js",
    "dev": "nodemon -e ts -w src --exec \"npm run debug\"",
    "fmt": "npm run fmt:prettier",
    "fmt:check": "npm run fmt:check:prettier",
    "fmt:check:prettier": "prettier --check .",
    "fmt:prettier": "prettier --write .",
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "pm2 start dist/src/index.js --no-daemon --no-autorestart",
    "test": "npm run test:vitest",
    "test:vitest": "vitest run",
    "typecheck": "npm run typecheck:tsc",
    "typecheck:tsc": "tsc --noemit"
  },
  "type": "module"
}
