---
interface Props {
  title?: string;
}

const {title = "NS Dojo Template"} = Astro.props;
---

<header class="border-b border-gray-200 bg-white py-4">
  <div
    class="container mx-auto flex max-w-6xl items-center justify-between px-8">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">{title}</h1>
    </div>
    <nav>
      <ul class="flex list-none gap-8 p-0">
        <li>
          <a
            href="/"
            class="font-medium text-gray-600 transition-colors hover:text-blue-600"
            >Home</a
          >
        </li>
        <li>
          <a
            href="/about"
            class="font-medium text-gray-600 transition-colors hover:text-blue-600"
            >About</a
          >
        </li>
        <li>
          <a
            href="/contact"
            class="font-medium text-gray-600 transition-colors hover:text-blue-600"
            >Contact</a
          >
        </li>
      </ul>
    </nav>
  </div>
</header>
