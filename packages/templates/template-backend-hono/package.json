{
  "name": "@ns-dojo/template-backend-hono",
  "version": "0.1.0",
  "description": "Comprehensive Hono backend reference template with Node 22+, Zod v4, header versioning, SSE, WebSockets, and OpenAPI",
  "dependencies": {
    "@ns-dojo/shared-hono": "0.1.0",
    "@ns-dojo/shared-logging": "0.1.0",
    "@hono/node-server": "^1.19.6",
    "@hono/node-ws": "^1.2.0",
    "@hono/zod-openapi": "^1.1.5",
    "@hono/zod-validator": "^0.7.5",
    "@scalar/hono-api-reference": "^0.9.24",
    "hono": "^4.10.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@ns-dojo/eslint-config-node": "0.1.0",
    "@ns-dojo/ts-config-node": "0.1.0",
    "@ns-dojo/vitest-config-node": "0.1.0",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.10",
    "nodemon": "3.1.11",
    "pm2": "6.0.13",
    "typescript": "5.9.3",
    "vitest": "^4.0.10"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/src/server.d.ts",
      "node": "./dist/src/server.js",
      "import": {
        "source": "./src/server.ts",
        "default": "./dist/src/server.js"
      }
    },
    "./*": {
      "types": "./dist/src/*.d.ts",
      "node": "./dist/src/*.js",
      "import": {
        "source": "./src/*.ts",
        "default": "./dist/src/*.js"
      }
    }
  },
  "files": [
    "package.json",
    "dist",
    "README.md"
  ],
  "main": "dist/src/server.js",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "coverage": "npm run coverage:vitest",
    "coverage:vitest": "vitest run --coverage",
    "debug": "tsc --build && node --inspect=0.0.0.0 dist/src/server.js",
    "dev": "nodemon -e ts -w src --exec \"npm run debug\"",
    "fmt": "npm run fmt:prettier",
    "fmt:check": "npm run fmt:check:prettier",
    "fmt:check:prettier": "prettier --check .",
    "fmt:prettier": "prettier --write .",
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "pm2 start dist/src/server.js --no-daemon --no-autorestart",
    "test": "npm run test:vitest",
    "test:vitest": "vitest run",
    "typecheck": "npm run typecheck:tsc",
    "typecheck:tsc": "tsc --noemit"
  },
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  }
}
